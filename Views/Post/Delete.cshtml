@model socialapp.Models.PostModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń post</h1>

<h3>Czy na pewno chcesz usunąć ten post?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <span>Treść: </span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            <span>Ostatnio modyfikowane: </span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy</a>
    </form>
</div>
