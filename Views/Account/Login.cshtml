@model socialapp.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}

<form asp-action="Login" method="post">
    <div>
        <input class="form-control" asp-for="Name" placeholder="Login" />
        <span asp-validation-for="Name"></span>
    </div>
    <br />
    <div>
        <input class="form-control" asp-for="Password" placeholder="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <br />
    <input class="mt-3" asp-for="ReturnUrl" type="hidden" />
    <button type="submit" class="btn btn-success">Login</button>

    <p class="font-italic">Konto Admina - login: admin, hasło: Admin12#</p>
    <p class="font-italic">Konto Usera - login: January, hasło: @@Qwerty123</p>
</form>

