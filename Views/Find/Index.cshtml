@model IEnumerable<socialapp.Models.UserModel>
@using (Html.BeginForm("Index", "Find", FormMethod.Get)) 
{
    @Html.TextBox("searching")<input class="ml-2" type="submit" value="Szukaj"/>
}
<div>
    @if (Model.Count() == 0)
    {
        <p class="m-2">Brak wyników. <span class="font-italic">Wpisz "jan"</span></p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                       Użytkownik
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                           <p>@item.FirstName @item.LastName</p>
                        </td>
                        <td>
                            @Html.ActionLink("Zobacz profil", "Details", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
